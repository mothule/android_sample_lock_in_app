<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mothule.locksample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name="jp.mothule.locksample.app.LockApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.mothule.locksample.app.ApplicationLaunchActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.mothule.locksample.app.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="jp.mothule.locksample.app.LockActivity"
            android:label="@string/lock_activity_name" >
        </activity>
        <activity
            android:name="jp.mothule.locksample.app.SubActivity"
            android:label="@string/sub_activity_name" >
        </activity>
        </application>

</manifest>